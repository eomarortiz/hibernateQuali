    <mapping resource="models/TipoContacto.hbm.xml"/>
    <mapping resource="models/Aseguradora.hbm.xml"/>
    <mapping resource="models/Campana.hbm.xml"/>
    <mapping resource="models/SubmarcaCliente.hbm.xml"/>
